                     , tasty-hunit
                     , text
                     , primitive
                     , vector
                     , vector-algorithms
                     , containers
                     , tuple
                     , attoparsec
                     , xxhash
                     , binary
                     , mwc-random
                     , split
                     , raw-strings-qq
                     , tasty
                     , nlp-types
                     , wiki-ner
  default-language:    Haskell2010
  ghc-options:        -threaded
                      -O2
