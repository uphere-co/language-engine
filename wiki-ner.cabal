library
  hs-source-dirs:      src
  exposed-modules:     Assert
                     , WikiEL
                     , WikiEL.Type.Equity
                     , WikiEL.Type.FileFormat
                     , WikiEL.Type.Wikidata
                     , WikiEL.Type.Wikipedia
                     , WikiEL.Type.WordNet
                     , WikiEL.Type.RDF.Wikidata
                     , WikiEL.Type.RDF.Yago
                     , WikiEL.ETL.RDF.Wikidata
                     , WikiEL.ETL.RDF.Yago
                     , WikiEL.ETL.LoadData
                     , WikiEL.ETL.Parser
                     , WikiEL.EntityLinking
                     , WikiEL.Misc
                     , WikiEL.WikiEntityTagger
                     , WikiEL.NamedEntity
                     , WikiEL.CoreNLP
                     , WikiEL.WikiNamedEntityTagger
                     , WikiEL.WikiEntityClass
                     , WikiEL.Convert
  other-modules:       WikiEL.ETL.RDF.Common
                     , WikiEL.BinarySearch
  other-extensions:    OverloadedStrings
                     , GeneralizedNewtypeDeriving
                     , FlexibleContexts
                     , ExistentialQuantification
                     , DeriveFunctor
                     , FlexibleInstances
                     , StandaloneDeriving
  build-depends:       base
                     , binary
                     , tasty-hunit
                     , text
                     , primitive
                     , vector
                     , vector-algorithms
                     , tuple
                     , containers
                     , attoparsec
                     , xxhash
                     , nlp-types
  default-language:    Haskell2010
  ghc-options:        -O2


test-suite test
  type: exitcode-stdio-1.0
  hs-source-dirs: test, src
  other-modules:       Test.Data.Filename
                     , Test.NamedEntityTagger
                     , Test.WikiEntityTagger
                     , Test.CoreNLPEntity
                     , WikiEL.BinarySearch
